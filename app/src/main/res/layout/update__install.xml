<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_update_installation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="srinivasu.sams.Activity.Update_Install">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:id="@+id/header_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/buttonback"
            android:text="askdfals"
            android:id="@+id/mybutton_click"
            android:layout_width="50dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:text="sams"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ScrollView
        android:layout_marginTop="50dp"
        android:layout_below="@+id/header_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/llimagelayotu"
        android:layout_height="match_parent"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/recceImage"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/install_dummy" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/install_dummy"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:id="@+id/recceInstallImage"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:gravity="center"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:text="RecceImage"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_weight="1"
                />
            <TextView
                android:gravity="center"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:text="Installation"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_weight="1"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_marginTop="10dp"
                    android:focusable="false"
                    android:id="@+id/InstallationRemarks_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Installation Remarks"
                    android:layout_margin="20dp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_marginTop="10dp"
                    android:focusable="false"
                    android:id="@+id/InstallationDate_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:inputType="date"
                    android:hint="Installation Date"
                    android:layout_margin="20dp"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                android:layout_marginBottom="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#337AB7"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:text="Update Installed Recce"
                android:id="@+id/update_install_btn" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>







